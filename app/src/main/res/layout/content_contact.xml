<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:id="@+id/content_contact"
  android:orientation="vertical"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  tools:context="store.active.asapp.contactActivity.ContactActivity"
  tools:showIn="@layout/activity_contact">

    <TextView
      android:layout_marginLeft="7dp"
      android:paddingRight="7dp"
      android:layout_width="366dp"
      android:layout_height="wrap_content"
      android:text="Nome"
      android:id="@+id/TextViewName"
      android:layout_gravity="center_horizontal|left"/>

    <EditText
      android:layout_marginLeft="7dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/editTextName"/>

    <TextView
      android:layout_marginLeft="7dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Mail di contatto"
      android:id="@+id/textViewMail"
      android:layout_gravity="left"/>
    <EditText
      android:layout_marginLeft="7dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/editTextMail"/>
    <TextView
      android:layout_marginLeft="7dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Oggetto"
      android:id="@+id/textViewSubject"
      android:layout_gravity="left"/>
    <EditText
      android:layout_marginLeft="7dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/editTextSubject"/>
    <TextView
      android:layout_marginLeft="7dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Messaggio"
      android:id="@+id/textViewMessage"
      android:layout_gravity="left"/>
    <EditText
      android:layout_marginLeft="7dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/editTextMessage"
      android:layout_gravity="center_horizontal"
      android:layout_weight="0.90"/>
    <Button
      android:layout_marginLeft="7dp"
      android:layout_width="337dp"
      android:layout_height="wrap_content"
      android:text="Invia"
      android:id="@+id/buttonSubmit" android:layout_gravity="center_horizontal"/>

</LinearLayout>
