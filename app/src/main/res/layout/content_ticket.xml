<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:id="@+id/content_ticket"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  tools:context="store.active.asapp.ticketActivity.TicketActivity"
  tools:showIn="@layout/activity_ticket">
    <TextView
      android:layout_width="366dp"
      android:layout_height="wrap_content"
      android:text="Partita Iva azienda / numero contratto assistenza"
      android:id="@+id/TextViewId"
      android:layout_gravity="center_horizontal|left"/>
    <EditText
      android:layout_width="366dp"
      android:layout_height="wrap_content"
      android:id="@+id/editTextId"/>
    <TextView
      android:layout_width="366dp"
      android:layout_height="wrap_content"
      android:text="Messaggio apertura ticket intervento"
      android:id="@+id/textViewMessage"
      android:layout_gravity="left"/>

    <EditText
      android:inputType="textMultiLine"
      android:lines="18"
      android:minLines="6"
      android:gravity="top|left"
      android:maxLines="20"
      android:scrollbars="vertical"
      android:layout_width="366dp"
      android:scrollHorizontally="false"
      android:layout_height="wrap_content"
      android:id="@+id/editTextMessage"
      android:layout_weight="0.70" />

    <Button
      android:layout_width="342dp"
      android:layout_height="wrap_content"
      android:text="Apri ticket"
      android:id="@+id/buttonSubmit"
      android:layout_gravity="center_horizontal"/>
</LinearLayout>
